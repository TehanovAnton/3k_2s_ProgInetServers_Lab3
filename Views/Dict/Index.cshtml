@using Storage;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<DictRecord> dictRecords = ViewBag.dicts;
}

@section header
{
    <header>
        <h4>INDEX HEADER</h4>
    </header>
}

<div>
    <h1>Records</h1>
    <ul>
        @foreach (DictRecord record in dictRecords)
        {
            <li>
                Html.RenderPartial("DictRecordPartial", record);
            </li>           
        }
    </ul>

    @Html.ActionLink("Add", "Add", "Dict")
</div>

@section footer
{
    <footer>
        <h4>INDEX FOOTER</h4>
    </footer>
}

